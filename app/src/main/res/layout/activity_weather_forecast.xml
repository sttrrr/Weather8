<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/forecast_background"
    android:textColor="@color/black"

    >

    <TextView
        android:id="@+id/cityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_light"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"

         />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="272dp"

        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/cityText"
        tools:layout_editor_absoluteX="-16dp">

        <!-- главный блок -->

        <TextView
            android:id="@+id/tempWeatherForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/merriweather_light"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/weather_icon_forecast"
            android:layout_width="148dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/description_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/merriweather_light"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TableRow>

            <TextView
                android:id="@+id/date"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/forecast_icon"
                android:layout_width="40dp"
                android:layout_height="90px"
                android:layout_weight="0.3"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginBottom="5dp"

                />

            <TextView
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/date1"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/forecast_icon1"

                android:layout_width="40dp"
                android:layout_height="90px"
                android:layout_weight="0.3"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginBottom="5dp"

                 />

            <TextView
                android:id="@+id/temp1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/date2"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/forecast_icon2"

                android:layout_width="40dp"
                android:layout_height="90px"
                android:layout_weight="0.3"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/temp2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/date3"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/forecast_icon3"

                android:layout_width="40dp"
                android:layout_height="90px"
                android:layout_weight="0.3"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/temp3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/date4"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/forecast_icon4"

                android:layout_width="90px"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/temp4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </TableRow>


    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

